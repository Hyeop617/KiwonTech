{{>layout/header}}
<h1>Hello World!</h1>
<table class="table table-primary table-bordered">
    <thead>
    <td>
    <th>번호</th>
    <th>제목</th>
    <th>글쓴이</th>
    <th>날짜</th>
    </td>
    </thead>
    <tbody>
    {{#post}}
        <tr>
            <td></td>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{author}}</td>
            <td>{{modify_date}}</td>
            <td>
                <button>
                    <a href="/bbs/modifycheck/{{id}}">수정</a>
                </button>
