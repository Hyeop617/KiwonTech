</table>
<div>
    <div>
        <select id="search_type">
            <option value="title">제목</option>
            <option value="author">작성</option>
        </select>
        <input type="search" id="in_keyword">
        <button id="search">검색</button>
    </div>
</div>
<button class="btn btn-primary">
    <a href="/bbs/write">쓰기</a>
</button>

{{>layout/footer}}