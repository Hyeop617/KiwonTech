{{>layout/header}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{#post}}
                <div style="background-color:#F5F5F5;" class="m-1">
                    <div>
                        <div class="font-weight-bold" id="title">{{title}}</div>
                    </div>
                </div>
                <hr>
                <div>
                    <span id="author">{{author}}</span>
                    <span class="float-right" id="modify_date">{{modify_date}}</span>
                </div>
                <hr>
                <div>
                    <span id="content">{{content}}</span>
                </div>
            {{/post}}
            <br>
            <div style="background-color:#F5F5F5" class="text-center">
                    <input class="input-group" style="border:1px solid #BBBBBB" type="email" id="email" placeholder="이메일을 입력하세요.">
                    <button class="btn btn-primary m-1" id="btn-sendmail">메일로 보내기</button>
            </div>
        </div>
    </div>

</div>

{{>layout/footer}}